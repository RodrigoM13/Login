<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvCodigo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CÃ³digo"
        android:textColor="@android:color/black"
        android:fontFamily="@font/helvetica_neue_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvNombre"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Nombre"
        android:textColor="@android:color/black"
        android:fontFamily="@font/helvetica_neue_light"
        app:layout_constraintStart_toEndOf="@id/tvCodigo"
        app:layout_constraintEnd_toStartOf="@id/tvApellido"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/tvApellido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Apellido"
        android:textColor="@android:color/black"
        android:fontFamily="@font/helvetica_neue_light"
        app:layout_constraintStart_toEndOf="@id/tvNombre"
        app:layout_constraintEnd_toStartOf="@id/tvCorreo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Correo"
        android:textColor="@android:color/black"
        android:fontFamily="@font/helvetica_neue_light"
        app:layout_constraintStart_toEndOf="@id/tvApellido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>
